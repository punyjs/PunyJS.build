{
    "name": "punyjs-build"
    , "description": [
        "This is the build manifest for the PunyJS.build project."
    ]
    , "config": {
        "strict": true
        , "engine": "node"
        , "output": "PunyJS/builder/"
    }
    , "repos": [
        {
            "type": "git"
            , "url": "https://github.com/punyjs/PunyJS.core.git"
            , "branch": "development"
            , "local": "PunyJS/core"
        }
    ]

    , "appFileName": "builder-node.js"
    , "appDtreeFileName": "builder-dtree.js"
    , "iocNamePrefix": "ioc-controller"
    , "iocType": "monolith"
    , "appType": "ioc.${iocType}"

    , "entries": [
        {
            "type": "bootstrap"
            , "bootstrapType": "${appType}"
            , "config": {
                "fileName": "${name}.cli.js"
            }
            , "appContainerPath": "./${appFileName}"
            , "appDtreePath": "./${appDtreeFileName}"
        }
        , {
            "type": "ioc.monolith"
            , "base": [
                "{PunyJS.build.handlers.file}/build-handler.dtree.json"
                , "{PunyJS.build.handlers.javascript}/build-handler.dtree.json"
                , "{PunyJS.build.handlers.module}/build-handler.dtree.json"
                , "{PunyJS.build.handlers.ioc}/build-handler.dtree.json"
                , "{PunyJS.build.handlers.express}/build-handler.dtree.json"
                , "{PunyJS.build.handlers.test}/build-handler.dtree.json"
                , "{PunyJS.build.handlers.bootstrap}/build-handler.dtree.json"
                , "{PunyJS.core.encoding}/dtree.json"
                , "{PunyJS.core.encoding}/node.dtree.json"
            ]
            , "config": {
                "dtreeFileName": "${appDtreeFileName}"
                , "fileName": "${appFileName}"
            }
        }
        , "{PunyJS.ioc}/manifests/base.manifest.json"
        , "{PunyJS.ioc}/manifests/node.manifest.json"
        , "{PunyJS.cmdArgs}/base.manifest.json"
    ]
}